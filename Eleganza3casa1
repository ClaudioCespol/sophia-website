  <script>
    const vendidos = 84;
    const totales = 230;
    const disponibles = totales - vendidos;
    const ctx = document.getElementById('nftChart').getContext('2d');
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Vendidos', 'Disponibles'],
        datasets: [{
          label: 'NFTs',
          data: [vendidos, disponibles],
          backgroundColor: ['#004aad', '#a9c4e5']
        }]
      },
      options: {
        plugins: {
          legend: {
            position: 'bottom'
          }
        }
      }
    });
